def comptar_vocals(paraula):
    vocals = "aeiou"
    paraula = paraula.lower()
    counts = {v: paraula.count(v) for v in vocals}
    print(f"Hi ha {counts['a']} a’s, {counts['e']} e’s, {counts['i']} i’s, {counts['o']} o’s i {counts['u']} u’s")

def main():
    comptar_vocals("Ratapinyada")

if __name__ == "__main__":
    main()